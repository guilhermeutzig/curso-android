<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mainapplication.com.listas.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de nomes"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:id="@+id/labelListaNomes"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/listaNomes"
        android:layout_below="@+id/labelListaNomes"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        tools:listitem="@android:layout/simple_list_item_1"/>

    <Button
        android:id="@+id/goToDescriptions"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/listaNomes"
        android:layout_centerHorizontal="true"
        android:text="Lista com descrição e ícone"/>

</RelativeLayout>
