<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mainapplication.com.contadorpessoas.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/botaoReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Reset" />

    <Button
        android:id="@+id/botaoHomem"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:background="@color/colorPrimary"
        android:text="0"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pessoas: 0"
        android:layout_marginTop="80dp"
        android:textSize="40dp"
        android:layout_below="@id/botaoReset"/>

    <TextView
        android:id="@+id/textWomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Mulheres: 0"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textTotal"/>

    <TextView
        android:id="@+id/textMen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Homens: 0"
        android:textSize="30dp"
        android:layout_below="@id/textWomen"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/botaoMulher"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/botaoHomem"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@color/colorAccent"
        android:text="0"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
